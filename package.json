{
  "name": "bananapod",
  "private": true,
  "version": "0.9.9",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:3000 electron .",
    "start:electron:auto": "electron .",
    "build:electron": "cross-env BUILD_TARGET=electron vite build",
    "dist:win": "npm run build:electron && electron-builder --win portable",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:banana": "node scripts/test-banana.mjs",
    "test:touchState": "npx tsc src/touch/touchState.ts --outDir tmp/touch-tests --module ESNext --target ES2022 --moduleResolution bundler --skipLibCheck true --noEmit false && node scripts/test-touchState.mjs",
    "test:touchGesture": "npx tsc src/touch/touchState.ts src/touch/touchGestureEngine.ts --outDir tmp/touch-tests --module ESNext --target ES2022 --moduleResolution bundler --skipLibCheck true --noEmit false && node scripts/test-touchGestureEngine.mjs",
    "style:check": "node scripts/style-consistency.mjs"
  },
  "dependencies": {
    "@google/genai": "^1.17.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "electron": "^32.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.bananapod.app",
    "productName": "BananaPod",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "icon": "public/logo/icons8-banana-100.png",
    "win": {
      "icon": "public/logo/icons8-banana-100.png",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
